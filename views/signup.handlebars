<div class="loginBox col justify-content-center">
  <h2 class="signup">Sign Up</h2>
  <form class="form signupSubmit">
    <div class="form-group">
      <input class="loginTextBox form-input" type="text" placeholder="Username" id="signupUsername" />
    </div>
    <div class="form-group">
      <input class="loginTextBox form-input" type="password" placeholder="Password" id="signupPassword" />
    </div>
    <div class="form-group">
      <button class="loginBtn btn-primary" type="submit">Signup</button>
    </div>
    <a class="signupLink" href="/login">Login Instead</a>
  </form>
</div>
</div>

<script src="./js/signUp.js"></script>